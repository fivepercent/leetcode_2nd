public class Solution {
    public int reverse(int x) {
        long res=0;
        //x can be negative or positive
        while(x!=0){
            res=res*10+x%10;
            x/=10;
        }
        //pay attention to overflow
        return (res>Integer.MAX_VALUE||res<Integer.MIN_VALUE)? 0:(int)res;
    }
}
